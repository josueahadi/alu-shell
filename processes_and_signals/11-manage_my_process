#!/usr/bin/env bash
# Function to start manage_my_process
start() {
    ./manage_my_process &
    echo $! > /var/run/my_process.pid
    echo "manage_my_process started"
}
# Function to stop manage_my_process
stop() {
    if [ -f "/var/run/my_process.pid" ]; then
        pid=$(cat /var/run/my_process.pid)
        kill "$pid"
        rm -f /var/run/my_process.pid
        echo "manage_my_process stopped"
    else
        echo "manage_my_process is not running" >&2
    fi
}
# Function to restart manage_my_process
restart() {
    if [ -f "/var/run/my_process.pid" ]; then
        stop
        start
        echo "manage_my_process restarted"
    else
        echo "manage_my_process is not running, starting it"
        start
    fi
}
# Main function
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}" >&2
        exit 1
        ;;
esac
